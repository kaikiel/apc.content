<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="apc.content">
<body>


<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<?python
from plone import api
portal = api.portal.get()
teachers = portal['teacher'].getChildNodes()
schools = portal['school'].getChildNodes()
?>

<table>
    <tbody>
        <tr>
            <th>學校\師資</th>
            <th tal:repeat="teacher teachers">
                ${teacher/title}<br>
                ${python:teacher.localLang[4:]}<br>
                <tal:lang tal:repeat="time teacher/classTime">
                    ${python:view.vocaClassTime.getTerm(time).title}<tal:common condition="not:repeat/time/end">, </tal:common>
                </tal:lang>
            </th>
        </tr>

        <tr tal:repeat="school schools">
            <td style="width:250px">
                ${school/title}<br>
                <tal:lang repeat="lang python:school.localLang.split('/')">
                    ${python:lang[4:]}<br>
                </tal:lang>
            </td>
            <td tal:repeat="teacher teachers" style="width:500px">
                <tal:class repeat="item view/courseTable">
                    <tal:item condition="python:item.startswith(teacher.title) and view.courseTable[item][0]">
                        <tal:course repeat="matchSchool python:view.courseTable[item][2:]">
                            <tal:match condition="python:school.title == matchSchool[0] and len(view.courseTable[item][2:]) >= view.min_sc">
                                ${python:view.vocaClassTime.getTerm(item.split('_')[1]).title}:<br>
                                開課學校: ${python:view.classroomIn(item)}<br>
                                語言/程度: ${python:view.courseTable[item][2][1]} / ${python:view.courseTable[item][2][2]}<br>
                                總學生數: ${python:view.courseTable[item][0]}<br>
                                開課級別: ${python:view.courseTable[item][1]}<br>
                                共學組成:<br>
                                <tal:co repeat="coSchool python:view.courseTable[item][2:]">
                                    ${python:coSchool[0]} / ${python:coSchool[1]} / 級別:${python:coSchool[2]} / 人數:${python:coSchool[3]}<br>
                                </tal:co><hr>
                            </tal:match>
                        </tal:course>
                    </tal:item>
                </tal:class>
            </td>
        </tr>
    </tbody>
</table>

















</metal:content-core>
</metal:content-core>

</body>
</html>

